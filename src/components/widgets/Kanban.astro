---
// Edit tasks directly here
const columns = [
  {
    id: 'todo',
    label: 'todo',
    tasks: [
      { title: 'refactor code validation', tag: 'work' },
      { title: 'make a projects list for vacation', tag: 'study' }
    ]
  },
  {
    id: 'doing',
    label: 'doing',
    tasks: [{ title: 'remodel blog layout', tag: 'blog' }]
  },
  {
    id: 'done',
    label: 'done',
    tasks: [
      { title: 'TCC defense', tag: 'parkinsoncheck' },
      { title: 'agile 101 study material', tag: 'study' }
    ]
  }
]
---

<div class="kanban">
  {
    columns.map((column) => (
      <div class="kanban-column">
        <div class="kanban-header">
          <span class="kanban-label">{column.label}</span>
          <span class="kanban-count">{column.tasks.length}</span>
        </div>
        <div class="kanban-cards">
          {column.tasks.map((task) => (
            <div class="kanban-card">
              <span class="card-title">{task.title}</span>
              <span class="card-tag">{task.tag}</span>
            </div>
          ))}
        </div>
      </div>
    ))
  }
</div>

<style>
  .kanban {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  @media (max-width: 640px) {
    .kanban {
      grid-template-columns: 1fr;
    }
  }

  .kanban-column {
    min-height: 8rem;
  }

  .kanban-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 0.5rem;
    margin-bottom: 0.75rem;
    border-bottom: 1px solid var(--border);
  }

  .kanban-label {
    font-size: var(--font-size-s);
    color: var(--text-secondary);
  }

  .kanban-count {
    font-size: var(--font-size-s);
    color: var(--text-tertiary);
  }

  .kanban-cards {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .kanban-card {
    padding: 0.625rem 0.75rem;
    background-color: var(--astro-code-background);
    border: 1px solid var(--border);
    border-radius: 6px;
  }

  .card-title {
    display: block;
    font-size: var(--font-size-s);
    color: var(--text-primary);
    line-height: 1.4;
  }

  .card-tag {
    display: inline-block;
    margin-top: 0.375rem;
    font-size: 0.6875rem;
    color: var(--text-tertiary);
    letter-spacing: 0.02em;
  }

  .kanban:not(:empty) {
    margin-bottom: 1.25rem;
  }
</style>
