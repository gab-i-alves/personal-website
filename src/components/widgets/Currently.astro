---
// Edit current status directly here
const currently = [
  { icon: '▶', label: 'watching', value: 'Pluribus' },
  { icon: '♫', label: 'listening', value: 'Turnstile' },
  { icon: '◉', label: 'reading', value: 'Anna Kariênina' },
  { icon: '⚡', label: 'working on', value: 'This blog' },
  { icon: '◎', label: 'studying', value: 'Agile and CI/CD tools' }
]
---

<ul class="currently">
  {
    currently.map((item) => (
      <li class="currently-item">
        <span class="currently-icon">{item.icon}</span>
        <span class="currently-label">{item.label}</span>
        <span class="currently-value">{item.value}</span>
      </li>
    ))
  }
</ul>

<style>
  .currently {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .currently-item {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    padding: 0.375rem 0;
    font-size: var(--font-size-s);
    border-bottom: 1px dotted var(--border);
  }

  .currently-item:last-child {
    border-bottom: none;
  }

  .currently-icon {
    color: var(--text-tertiary);
    font-size: 0.6875rem;
    flex-shrink: 0;
    width: 0.875rem;
  }

  .currently-label {
    color: var(--text-secondary);
    flex-shrink: 0;
    min-width: 5.5rem;
  }

  .currently-value {
    color: var(--text-primary);
  }

  .currently:not(:empty) {
    margin-bottom: 1.25rem;
  }
</style>
